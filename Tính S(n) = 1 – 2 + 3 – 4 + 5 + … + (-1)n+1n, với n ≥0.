#include <iostream>
using namespace std;
int main()
{
	int n, i, tong;
	tong = 0;
	do
	{
		cout << "\nNhap vao so n: ";
		cin >> n;
		if (n <= 0)
		{
			cout << "\nNhap sai, nhap lai: ";
		}
	} while (n <= 0);
	for (i = 1; i <= ((-1) * (1 + n)) * n; i++)
	{
		tong += ((-1) * (1 + n)) * n;
	}
	cout << "\nGiai thua la: " << tong;
	system("pause");
	return 0;
}
