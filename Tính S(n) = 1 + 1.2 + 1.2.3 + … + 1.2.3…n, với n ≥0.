#include <iostream> 
using namespace std;
int main()
{
	int n, i, tong = 0, tich = 1;
	do
	{
		cout << "\nNhap vao so n: ";
		cin >> n;
		if (n <= 0)
		{
			cout << "\nNhap khong hop le: ";
		}
	} while (n <= 0);
	for (i = 1; i <= n; i++)
	{
		tich *= i;
		tong += tich;
	}
	cout << "\nTong s(" << n << ") la: " << tong;
	system("pause");
	return 0;
}
