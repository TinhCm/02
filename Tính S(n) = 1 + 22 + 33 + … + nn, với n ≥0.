#include <iostream>
#include <math.h> 
using namespace std;
int main()
{
	int n, i, tong = 0, luyThua = 1;
	do
	{
		cout << "\nNhap vao so n: ";
		cin >> n;
		if (n <= 0)
		{
			cout << "\nNhap n sai ,Nhap lai: ";
		}
	} while (n <= 0);
	for (i = 1; i <= n; i++)
	{
		luyThua = pow(i, i);
		tong += luyThua;
	}
	cout << "\nTong cua luy thua: " << tong;
	system("pause");
	return 0;
}
