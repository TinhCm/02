#include<iostream>
using namespace std;
int main()
{
	int h;
	do
	{
		cout << "Nhap chieu cao cua tam giac vuong can: ";
		cin >> h;
		if (h <= 0)
		{
			cout << "Chieu cao khong hop le,yeu cau nhap vao so nguyen lon hon 0." << endl;
		}
	} while (h <= 0);
		for (int i = 0; i < h; i++)
		{
			for (int j = 0; j <= i; j++)
			{
				cout << "*" << " ";
			}
			cout << endl;
		}
		system("pause");
		return 0;
}
