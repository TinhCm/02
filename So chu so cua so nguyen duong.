#include<iostream>
using namespace std;
int main()
{
	int n, dem=0;
	do
	{
		cout << "Nhap vao so nguyen n: ";
		cin >> n;
		if (n <= 0)
		{
			cout << "So nguyen khong hop le, yeu cau nhap lai so nguyen lon hon 0." << endl;
		}
	}
		while (n <= 0);

		while (n >= 10)
		{
			n = n / 10;
			dem++;
		}
		cout << "So chu so cua so nguyen la: "<<dem+1 << endl;
		system("pause");
		return 0;
}
