#include<iostream>	//BAI08: Tinh tich : 1*2*3...*n,(n>0).
using namespace std;
int main()
{
	int n , tich = 1;
	do
	{
		cout << "Nhap vao so nguyen duong n: ";
		cin >> n;
		if (n <= 0)
		{
			cout << "So nguyen khong hop le,yeu cau nhap so nguyen lon hon 0.";
		}
	} while (n <= 0);
	for (int i = 1; i <= n; i++)
		tich = tich * i;
	cout << "Tich cac so tu 1 den " << n << " la: " << tich << endl;
	system("pause");
	return 0;
}
