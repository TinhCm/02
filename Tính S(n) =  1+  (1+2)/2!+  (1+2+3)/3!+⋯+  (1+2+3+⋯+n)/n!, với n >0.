#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int n,diem=0;
	float tong = sqrt(2);
	do
	{
		cout << "Nhap vao so nguyen duong: ";
		cin >> n;
		if (n <= 0)
		{
			cout << "So nguyen khong hop le, yeu cau nhap vao so nguyen lon hon 0." << endl;
		}
	} while (n <= 0);

	for (int i = 1; i < n; i++)
	{
		tong = sqrt(2 + tong);
		diem++;
		if (diem == n)
		{
			break;
		}
	}
	cout << "Ket qu cua phep toan la: " << tong<<endl;
	system("pause");
	return 0;
}
