#include<iostream>
#include<time.h>
using namespace std;

void nhapMang(int n, int a[])
{
	srand((int)time(0));
	for (int i = 0; i < n; i++)
	{
		a[i]= (-50) + (rand() % (141 + 1 + 50));
	}
}

void xuatMang(int n, int a[])
{
	for (int i = 0; i < n; i++)
	{
		cout << a[i]<<"\t";
	}
}

int main()
{
	int n,a[1000];
	do
	{
		cout << "Nhap vao so luong phan tu cua mang: ";
		cin >> n;
		if (n <= 0)
		{
			cout << "Khong hop le, yeu cau nhap vao so nguyen lon hon 0.";
		}
	} while (n <= 0);

	nhapMang(n, a);
	xuatMang(n, a);

	system("pause");
	return 0;
}
